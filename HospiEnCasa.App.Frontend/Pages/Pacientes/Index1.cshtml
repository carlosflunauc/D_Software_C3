@using HospiEnCasa.App.Dominio
@model HospiEnCasa.App.Frontend.Pages.Pacientes.Index1Model
@{
}
<form method="get">
    <div class="form-group">
        <label for="g">Genero</label>
        <select name="g" id="g" asp-for="@Model.gActual" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control">    
            <option value="-1">Ver todos</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<form method="get">
    <div class="form-group">
        <label for="b">Buscar</label>
        <input name="b" id="b" asp-for="@Model.bActual" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>>

<h1>Listado de Pacientes</h1>
<a class="btn btn-primary" asp-page="./Create1">Crear Paciente</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Telefono</th>
            <th scope="col">Genero</th>
            <th scope="col">Fecha Nacimiento</th>
            <th colspan="2" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model.pacientes)
        {
            <tr>
                <td>@paciente.Nombre</td>
                <td>@paciente.Apellidos</td>
                <td>@paciente.NumeroTelefono</td>
                <td>@paciente.Genero</td>
                <td>@paciente.FechaNacimiento</td>
                <td><a class="btn btn-secondary" asp-page="./Details1" asp-route-id="@paciente.Id">Detalle</a></td>
                <td><a class="btn btn-secondary" asp-page="./Edit1" asp-route-id="@paciente.Id">Editar</a></td>
            </tr>
        }    
    </tbody>
</table>